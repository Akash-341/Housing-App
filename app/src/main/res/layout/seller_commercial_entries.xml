<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:id="@+id/cvrecent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8.0dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="8.0dp"
        android:layout_marginBottom="10dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp"
        app:cardPreventCornerOverlap="true">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:id="@+id/linear1"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1"
                android:layout_marginTop="7dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.63"
                    android:clickable="false"
                    android:fontFamily="@font/amaranth"
                    android:focusableInTouchMode="false"
                    android:text="@string/date"
                    android:textStyle="bold"
                    android:textSize="16sp" />
                <TextView
                    android:id="@+id/tvdate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.41"
                    android:clickable="false"
                    android:focusableInTouchMode="false"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvCR"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="7dp"
                    android:visibility="gone"
                    android:background="@drawable/rounded_textview"
                    android:clickable="false"
                    android:focusableInTouchMode="false"
                    android:gravity="center"
                    android:text="C/R"
                    android:textColor="@android:color/black"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvLE"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_textview"
                    android:clickable="false"
                    android:visibility="gone"
                    android:padding="7dp"
                    android:focusableInTouchMode="false"
                    android:gravity="center"
                    android:text="LE"
                    android:layout_marginLeft="5dp"
                    android:textColor="@android:color/black"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvSF"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_textview"
                    android:clickable="false"
                    android:padding="7dp"
                    android:focusableInTouchMode="false"
                    android:gravity="center"
                    android:text="SF"
                    android:layout_marginLeft="5dp"
                    android:fontFamily="@font/amaranth"
                    android:textColor="@android:color/white"
                    android:textSize="14sp" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="7dp"
                    android:id="@+id/edit"
                    android:src="@drawable/ic_baseline_more_vert_24"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1"
                android:layout_marginTop="7dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.27"
                    android:text="@string/name"
                    android:textSize="16sp"
                    android:fontFamily="@font/amaranth"
                    android:textStyle="bold"
                    app:boxBackgroundMode="none"
                    app:hintAnimationEnabled="true"/>

                <TextView
                    android:id="@+id/tvName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:layout_weight="0.21"
                    android:fontFamily="@font/amaranth"
                    android:focusableInTouchMode="false"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:text="@string/mob_no_1"
                    android:layout_weight="0.27"
                    android:fontFamily="@font/amaranth"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:boxBackgroundMode="none"
                    app:hintAnimationEnabled="true"/>
                <TextView
                    android:id="@+id/tvMob1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:fontFamily="@font/amaranth"
                    android:focusableInTouchMode="false"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    />

            </LinearLayout>
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginEnd="3dp"
                android:id="@+id/arrow"
                android:src="@drawable/ic_baseline_keyboard_arrow_down_24"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:id="@+id/linear2"
            android:layout_marginLeft="10dp"
            android:visibility="gone"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:layout_weight="0.26"
                    android:fontFamily="@font/amaranth"
                    android:text="@string/flat_no"

                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:boxBackgroundMode="none"
                    app:hintAnimationEnabled="true" />

                <TextView
                    android:id="@+id/tvflatNo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:layout_weight="0.24"
                    android:clickable="false"
                    android:focusableInTouchMode="false"
                    android:fontFamily="@font/amaranth"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:layout_weight="0.26"
                    android:fontFamily="@font/amaranth"
                    android:text="@string/location"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:boxBackgroundMode="none"
                    app:hintAnimationEnabled="true" />

                <TextView
                    android:id="@+id/tvlocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:fontFamily="@font/amaranth"
                    android:clickable="false"
                    android:focusableInTouchMode="false"

                    android:textColor="@color/black"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:layout_marginEnd="20dp"
                    android:layout_weight="0.26"
                    android:fontFamily="@font/amaranth"
                    android:text="@string/type"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:boxBackgroundMode="none"
                    app:hintAnimationEnabled="true" />

                <TextView
                    android:id="@+id/tvtype"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:layout_weight="0.24"
                    android:clickable="false"
                    android:fontFamily="@font/amaranth"
                    android:focusableInTouchMode="false"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:layout_weight="0.26"
                    android:fontFamily="@font/amaranth"
                    android:text="@string/area_sq_ft"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:boxBackgroundMode="none"
                    app:hintAnimationEnabled="true" />

                <TextView
                    android:id="@+id/tvarea"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:fontFamily="@font/amaranth"
                    android:clickable="false"
                    android:focusableInTouchMode="false"

                    android:textColor="@color/black"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:layout_weight="0.26"
                    android:fontFamily="@font/amaranth"
                    android:text="@string/building_name"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:boxBackgroundMode="none"
                    app:hintAnimationEnabled="true" />

                <TextView
                    android:id="@+id/tvbuilding"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:layout_weight="0.24"
                    android:clickable="false"
                    android:focusableInTouchMode="false"
                    android:fontFamily="@font/amaranth"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:layout_weight="0.26"
                    android:fontFamily="@font/amaranth"
                    android:text="@string/mob_no_2"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:boxBackgroundMode="none"
                    app:hintAnimationEnabled="true" />

                <TextView
                    android:id="@+id/tvmob2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:fontFamily="@font/amaranth"
                    android:clickable="false"
                    android:focusableInTouchMode="false"

                    android:textColor="@color/black"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:orientation="horizontal"
                android:weightSum="1">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/amaranth"
                    android:text="@string/price"
                    android:layout_weight="0.26"
                    android:layout_marginTop="7dp"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:boxBackgroundMode="none"
                    app:hintAnimationEnabled="true"/>
                <TextView
                    android:id="@+id/tvPrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="0.24"
                    android:clickable="false"
                    android:fontFamily="@font/amaranth"
                    android:layout_marginTop="7dp"
                    android:focusableInTouchMode="false"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/amaranth"
                    android:text="@string/remarks"
                    android:textSize="16sp"
                    android:layout_weight="0.26"
                    android:textStyle="bold"
                    android:layout_marginTop="7dp"
                    app:boxBackgroundMode="none"
                    app:hintAnimationEnabled="true"/>
                <TextView
                    android:id="@+id/tvreamrks"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:fontFamily="@font/amaranth"
                    android:clickable="false"
                    android:layout_marginTop="7dp"
                    android:focusableInTouchMode="false"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:paddingStart="2dp"
                    android:paddingEnd="0dp"
                    android:layout_marginEnd="3dp"
                    android:id="@+id/arrow2"
                    android:src="@drawable/ic_baseline_keyboard_arrow_up_24"
                    />

            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>