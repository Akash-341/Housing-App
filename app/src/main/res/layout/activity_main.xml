<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:id="@+id/drawer"
    tools:context=".Activity.MainActivity">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:id="@+id/linearmain"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_marginRight="3dp"
                android:paddingTop="5dp"
                android:layout_marginTop="50dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingLeft="5dp"
                    >
                    <androidx.cardview.widget.CardView
                        android:layout_width="100dp"
                        android:layout_height="105dp"
                        android:id="@+id/cardview1"
                        app:cardCornerRadius="10dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginLeft="8.0dp"
                        android:layout_marginRight="2dp"
                        android:layout_marginBottom="10dp"
                        android:paddingLeft="10dp"
                        android:paddingTop="5dp"
                        app:cardElevation="5dp"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="25"
                            android:textStyle="bold"
                            android:textSize="24sp"

                            android:layout_marginBottom="15dp"
                            android:layout_gravity="center"
                            android:id="@+id/tvPM"/>
                        <com.google.android.material.divider.MaterialDivider
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            app:dividerColor="@color/gray"
                            android:layout_marginTop="70dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/past_month"
                            android:textStyle="bold"
                            android:layout_marginTop="80dp"
                            android:layout_marginBottom="5dp"
                            android:fontFamily="@font/amaranth"
                            android:layout_gravity="center_horizontal"/>

                    </androidx.cardview.widget.CardView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="15dp"
                    >
                    <androidx.cardview.widget.CardView
                        android:layout_width="100dp"
                        android:layout_height="105dp"
                        android:id="@+id/cardview2"
                        app:cardCornerRadius="10dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginLeft="8.0dp"
                        android:layout_marginRight="8.0dp"
                        android:layout_marginBottom="10dp"
                        app:cardElevation="10dp"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="3000"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="15dp"
                            android:layout_gravity="center"
                            android:id="@+id/tvCom"/>
                        <com.google.android.material.divider.MaterialDivider
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            app:dividerColor="@color/gray"
                            android:layout_marginTop="70dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/commercial"
                            android:layout_marginTop="80dp"
                            android:textStyle="bold"
                            android:fontFamily="@font/amaranth"
                            android:layout_gravity="center_horizontal"/>

                    </androidx.cardview.widget.CardView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"

                    >


                    <androidx.cardview.widget.CardView
                        android:layout_width="100dp"
                        android:layout_height="105dp"
                        android:id="@+id/cardview3"
                        app:cardCornerRadius="10dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginRight="8.0dp"
                        android:layout_marginLeft="2dp"
                        android:layout_marginBottom="10dp"
                        app:cardElevation="10dp"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2800"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="15dp"
                            android:layout_gravity="center"
                            android:id="@+id/tvRes"/>
                        <com.google.android.material.divider.MaterialDivider
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            app:dividerColor="@color/gray"
                            android:layout_marginTop="70dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/residential"
                            android:layout_marginTop="80dp"
                            android:layout_marginBottom="5dp"
                            android:textStyle="bold"
                            android:fontFamily="@font/amaranth"
                            android:layout_gravity="center_horizontal"/>

                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </LinearLayout>
            <com.google.android.material.divider.MaterialDivider
                android:layout_width="match_parent"
                android:layout_height="10dp"
                app:dividerColor="@color/white"
                android:layout_marginTop="20dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.85"
                    android:text="Recent Entries :"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/amaranth"
                    android:textColor="@color/black"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"/>
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:id="@+id/imgfilter"
                    android:src="@drawable/filter"
                    />
            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/recent_recycler"
                tools:listitem="@layout/recent_entries"
                >
            </androidx.recyclerview.widget.RecyclerView>



        </LinearLayout>

        <RelativeLayout
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:elevation="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fltadd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="30dp"
                android:backgroundTint="@color/purple_700"
                android:src="@drawable/ic_baseline_add_24"
                app:tint="@color/white"
                android:visibility="visible"
                app:backgroundTint="@color/purple_700"/>
                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/fltlicense"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="90dp"
                    android:backgroundTint="@color/gray"
                    android:src="@drawable/ic_baseline_house_24"
                    android:visibility="visible"
                    app:layout_constraintBottom_toTopOf="@+id/fltadd"
                    app:layout_constraintEnd_toEndOf="@+id/fltadd"
                    app:layout_constraintStart_toStartOf="@+id/fltadd" />

                <TextView
                    android:id="@+id/licence"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="80dp"
                    android:layout_marginBottom="120dp"
                    android:background="#ffFF961F"
                    android:paddingStart="5dp"
                    android:text="Commercial"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:fontFamily="@font/amaranth"
                    app:layout_constraintBottom_toBottomOf="@+id/fltlicense"
                    app:layout_constraintEnd_toStartOf="@+id/fltlicense"
                    app:layout_constraintTop_toTopOf="@+id/fltlicense" />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/fltseller"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="160dp"
                    android:backgroundTint="@color/gray"
                    android:src="@drawable/ic_baseline_location_city_24"
                    android:visibility="visible"
                    app:layout_constraintBottom_toTopOf="@+id/fltlicense"
                    app:layout_constraintEnd_toEndOf="@+id/fltlicense"
                    app:layout_constraintStart_toStartOf="@+id/fltlicense" />

                <TextView
                    android:id="@+id/Seller"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="80dp"
                    android:layout_marginBottom="185dp"
                    android:background="#ffFF961F"
                    android:paddingStart="5dp"
                    android:fontFamily="@font/amaranth"
                    android:text="Residential"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@+id/fltseller"
                    app:layout_constraintEnd_toStartOf="@+id/fltseller"
                    app:layout_constraintTop_toTopOf="@+id/fltseller" />

        </RelativeLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


    <com.google.android.material.navigation.NavigationView
        android:layout_width="230dp"
        android:layout_height="match_parent"
        android:id="@+id/nav_view"
        app:menu="@menu/activity_main_drawer"
        app:insetForeground="@color/black"
        android:elevation="10dp"
        android:theme="@style/NavigationDrawerStyle"
        android:layout_gravity="start"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:clickable="true"
        android:orientation="vertical">
        <include layout="@layout/version" />
    </LinearLayout>
    </com.google.android.material.navigation.NavigationView>


</androidx.drawerlayout.widget.DrawerLayout>